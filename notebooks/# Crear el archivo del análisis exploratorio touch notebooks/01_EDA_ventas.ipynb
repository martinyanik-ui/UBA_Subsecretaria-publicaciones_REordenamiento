import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from pathlib import Path
import warnings
warnings.filterwarnings('ignore')

# Configuraci√≥n de visualizaci√≥n
sns.set_style("whitegrid")
plt.rcParams['figure.figsize'] = (12, 6)

def cargar_datos_ventas(ruta_archivo):
    """
    Carga datos de ventas desde diferentes formatos
    """
    ruta = Path(ruta_archivo)
    
    if not ruta.exists():
        print(f"‚ö†Ô∏è  Archivo no encontrado: {ruta_archivo}")
        return None
    
    # Detectar formato
    if ruta.suffix == '.csv':
        df = pd.read_csv(ruta_archivo, encoding='utf-8')
    elif ruta.suffix in ['.xlsx', '.xls']:
        df = pd.read_excel(ruta_archivo)
    else:
        print(f"‚ùå Formato no soportado: {ruta.suffix}")
        return None
    
    print(f"‚úÖ Datos cargados: {len(df)} registros, {df.shape[1]} columnas")
    return df

def analizar_ventas_basico(df):
    """
    An√°lisis exploratorio b√°sico
    """
    print("=" * 70)
    print("üìä AN√ÅLISIS EXPLORATORIO DE VENTAS")
    print("=" * 70)
    
    # 1. Informaci√≥n general
    print("\n1. INFORMACI√ìN DEL DATASET:")
    print(f"   ‚Ä¢ Registros: {len(df):,}")
    print(f"   ‚Ä¢ Columnas: {df.shape[1]}")
    print(f"   ‚Ä¢ T√≠tulos √∫nicos: {df['titulo'].nunique() if 'titulo' in df.columns else 'N/A'}")
    
    # 2. Columnas disponibles
    print("\n2. COLUMNAS DISPONIBLES:")
    for i, col in enumerate(df.columns, 1):
        print(f"   {i:2}. {col}")
    
    # 3. Tipos de datos
    print("\n3. TIPOS DE DATOS:")
    print(df.dtypes)
    
    # 4. Valores nulos
    print("\n4. VALORES NULOS POR COLUMNA:")
    nulos = df.isnull().sum()
    if nulos.sum() > 0:
        for col, count in nulos.items():
            if count > 0:
                print(f"   ‚Ä¢ {col}: {count} nulos ({count/len(df)*100:.1f}%)")
    else:
        print("   ‚úÖ No hay valores nulos")
    
    return df

def analizar_distribucion_ventas(df):
    """
    Analiza distribuci√≥n temporal de ventas
    """
    if 'fecha' in df.columns:
        # Convertir fecha si es necesario
        df['fecha'] = pd.to_datetime(df['fecha'], errors='coerce')
        
        print("\n5. DISTRIBUCI√ìN TEMPORAL:")
        print(f"   ‚Ä¢ Per√≠odo: {df['fecha'].min().date()} a {df['fecha'].max().date()}")
        print(f"   ‚Ä¢ D√≠as cubiertos: {(df['fecha'].max() - df['fecha'].min()).days}")
        
        # Agregar columnas temporales
        df['a√±o'] = df['fecha'].dt.year
        df['mes'] = df['fecha'].dt.month
        df['trimestre'] = df['fecha'].dt.quarter
        
        # Ventas por a√±o
        ventas_a√±o = df.groupby('a√±o')['cantidad'].sum()
        print("\n   Ventas por a√±o:")
        for a√±o, total in ventas_a√±o.items():
            print(f"     ‚Ä¢ {a√±o}: {total:,} unidades")
        
        # Ventas por mes (promedio)
        ventas_mes = df.groupby('mes')['cantidad'].sum()
        
        # Gr√°fico de estacionalidad
        fig, axes = plt.subplots(1, 2, figsize=(14, 5))
        
        # Gr√°fico 1: Ventas por mes
        axes[0].bar(ventas_mes.index, ventas_mes.values, color='steelblue')
        axes[0].set_title('Ventas Totales por Mes', fontsize=14)
        axes[0].set_xlabel('Mes')
        axes[0].set_ylabel('Unidades Vendidas')
        axes[0].set_xticks(range(1, 13))
        axes[0].grid(True, alpha=0.3)
        
        # Gr√°fico 2: Evoluci√≥n temporal si hay varios a√±os
        if df['a√±o'].nunique() > 1:
            ventas_mes_a√±o = df.pivot_table(
                values='cantidad', 
                index='mes', 
                columns='a√±o', 
                aggfunc='sum'
            ).fillna(0)
            
            ventas_mes_a√±o.plot(ax=axes[1], marker='o')
            axes[1].set_title('Evoluci√≥n de Ventas por Mes y A√±o', fontsize=14)
            axes[1].set_xlabel('Mes')
            axes[1].set_ylabel('Unidades Vendidas')
            axes[1].legend(title='A√±o')
            axes[1].grid(True, alpha=0.3)
            axes[1].set_xticks(range(1, 13))
        
        plt.tight_layout()
        plt.show()
        
    return df

def analizar_top_titulos(df, top_n=10):
    """
    Analiza los t√≠tulos m√°s vendidos
    """
    if 'titulo' in df.columns and 'cantidad' in df.columns:
        print(f"\n6. TOP {top_n} T√çTULOS M√ÅS VENDIDOS:")
        
        ventas_por_titulo = df.groupby('titulo')['cantidad'].sum()
        top_titulos = ventas_por_titulo.nlargest(top_n)
        
        for i, (titulo, cantidad) in enumerate(top_titulos.items(), 1):
            porcentaje = (cantidad / ventas_por_titulo.sum()) * 100
            print(f"   {i:2}. {titulo[:50]}...: {cantidad:,} unidades ({porcentaje:.1f}%)")
        
        # Gr√°fico de Pareto
        fig, ax1 = plt.subplots(figsize=(12, 6))
        
        bars = ax1.bar(range(len(top_titulos)), top_titulos.values, color='steelblue', alpha=0.7)
        ax1.set_xlabel('T√≠tulos')
        ax1.set_ylabel('Unidades Vendidas', color='steelblue')
        ax1.set_title(f'Top {top_n} T√≠tulos M√°s Vendidos (An√°lisis de Pareto)', fontsize=14)
        ax1.set_xticks(range(len(top_titulos)))
        ax1.set_xticklabels([t[:30] + '...' for t in top_titulos.index], rotation=45, ha='right')
        ax1.grid(True, alpha=0.3)
        
        # L√≠nea de porcentaje acumulado
        ax2 = ax1.twinx()
        porcentaje_acumulado = (top_titulos.cumsum() / ventas_por_titulo.sum()) * 100
        ax2.plot(range(len(top_titulos)), porcentaje_acumulado.values, 
                color='darkred', marker='o', linewidth=2)
        ax2.set_ylabel('Porcentaje Acumulado (%)', color='darkred')
        ax2.tick_params(axis='y', labelcolor='darkred')
        ax2.set_ylim(0, 100)
        
        plt.tight_layout()
        plt.show()
        
        return top_titulos
    return None

def ejecutar_analisis_completo(ruta_datos):
    """
    Funci√≥n principal que ejecuta todo el an√°lisis
    """
    print("üîç INICIANDO AN√ÅLISIS EXPLORATORIO DE DATOS")
    print("=" * 70)
    
    # 1. Cargar datos
    df = cargar_datos_ventas(ruta_datos)
    if df is None:
        return
    
    # 2. An√°lisis b√°sico
    df = analizar_ventas_basico(df)
    
    # 3. An√°lisis temporal
    if 'fecha' in df.columns:
        df = analizar_distribucion_ventas(df)
    
    # 4. An√°lisis de t√≠tulos
    if 'titulo' in df.columns:
        top_titulos = analizar_top_titulos(df)
    
    print("\n" + "=" * 70)
    print("‚úÖ AN√ÅLISIS COMPLETADO")
    print("=" * 70)
    
    return df

